<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_splash">

    <fragment
        android:id="@+id/navigation_splash"
        android:name="com.erkaslan.storybox.ui.splash.SplashFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_navigation_splash_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/navigation_splash" />
    </fragment>

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.erkaslan.storybox.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home"/>
</navigation>